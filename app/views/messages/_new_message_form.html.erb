<div class="form-group msg-form w-100">
  <%= form_with(model: [@single_room, @message], remote: true, class: "d-flex" ) do |f| %>
    <%= f.text_area :body, id: 'chat-text', class: "form-control msg-content me-2",
                    placeholder: 'Type your message...', autocomplete: 'off' %>
    <%= f.submit 'Send', data: { disable_with: false }, class: "btn btn-warning" %>
  <% end %>
</div>
